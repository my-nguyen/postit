<header>
  <div class="navbar">
    <div class="navbar-inner">
      <div class="container">
        <ul class="nav">
          <li><%= link_to "Postit!", root_path, class: "brand" %></li>
        </ul>

        <div class="btn-group nav_item">
          <a class="btn btn-small dropdown-toggle" href="#" data-toggle="dropdown">
            Categories
            <span class="caret"></span>
          </a>

          <ul class="dropdown-menu">
            <% categories = %w(news programming education sports humor) %>
            <% categories.each do |category| %>
              <li><%= link_to category.capitalize, "/categories/#{category}" %></li>
            <% end %>
          </ul>
        </div>
        <% if current_user %>
          <div class="nav_item">
            <%= link_to "New Post", new_post_path, class: "btn btn-success btn-small" %>
          </div>

          <div class="btn-group nav_item">
            <%= link_to "", class: "btn btn-small dropdown-toggle", data: {toggle: "dropdown"} do %>
              <%= current_user.username %>
              <span class="caret"></span>
            <% end %>

            <ul class="dropdown-menu">
              <li><%= link_to "edit profile", edit_user_path(current_user) %></li>
              <li><%= link_to "view profile", user_path(current_user) %></li>
              <li><%= link_to "logout", "/logout" %></li>
            </ul>
          </div>
        <% else %>
          <div class="nav_item">
            <%= link_to "Register", new_user_path, class: "btn btn-success btn-small" %>
          </div>

          <div class="nav_item">
            <%= link_to "Log in", login_path, class: "btn btn-small" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</header>
