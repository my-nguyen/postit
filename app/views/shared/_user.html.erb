<div class="row">
  <div class="span12">
    <p class="lead"><%= title %></p>
    <hr></hr>
    <p></p>
    <div class="well">
      <%= form_for(@user, html: {id: "new_user", class: "new_user"}) do |f| %>
        <div style="margin:0;padding:0;display:inline"></div>
        <div class="control-group">
          <%= f.label :username %>
          <%= f.text_field :username %>
        </div>
        <div class="control-group">
          <%= f.label :password %>
          <%= f.password_field :password %>
        </div>
        <div class="control-group">
          <%= f.label :time_zone %>
          <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones %>
        </div>
        <div class="control-group">
          <%= f.submit button, html: {class: "btn btn-success"} %>
        </div>
      <% end %>
    </div>
  </div>
</div>
