<div class="row">
  <div class="span0 well text-center">
    <%= link_to("#{post_path(post.slug)}/vote?vote=true", rel: "nofollow", remote: true, method: :post) do %>
      <span class="glyphicon glyphicon-arrow-up"></span>
    <% end %>
    </br>
    <span><%= "votes" %></span>
    </br>
    <%= link_to("#{post_path(post.slug)}/vote?vote=false", rel: "nofollow", remote: true, method: :post) do %>
      <span class="glyphicon glyphicon-arrow-down"></span>
    <% end %>
  </div>

  <div class="span8 well">
    <p>
      <% categories = %w(news programming education sports humor) %>
      <% categories.each do |category| %>
        <% if eval("post.#{category}") %>
          <span class="badge">
            <%= link_to category.capitalize, "/categories/#{category}" %>
          </span>
        <% end %>
      <% end %>
    </p>

    <h4><%= link_to post.title, full_url(post.url) %></h4>
    <p><%= post.description %></p>

    <p>
      <span class="quiet">posted by</span>
      <%= link_to "iceguyvn", "/users/iceguyvn" %>
      <small>at <%= post.created_at %></small>
    </p>
    <small>
      <span>
        <%= link_to "#{post.comments.count} comments", post_path(post.slug) %>
      </span>
    </small>
  </div>
</div>
