<div class="row">
  <div class="span12">
    <p class="lead">Register</p>
    <hr></hr>
    <p></p>
    <div class="well">
      <%= form_for(@user, html: {id: "new_user", class: "new_user"}) do |f| %>
        <div style="margin:0;padding:0;display:inline"></div>
        <div class="control-group">
          <%= f.label :username %>
          <%= f.text_field :username %>
        </div>
        <div class="control-group">
          <%= f.label :password %>
          <%= f.password_field :password %>
        </div>
        <div class="control-group">
          <%= f.submit "Register", html: {class: "btn btn-success"} %>
        </div>
      <% end %>
    </div>
  </div>
</div>
